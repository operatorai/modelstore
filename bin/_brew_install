#!/bin/bash
set -e

function install {
    if brew ls --versions "$1" >/dev/null; then
        HOMEBREW_NO_AUTO_UPDATE=1 brew upgrade "$1"
    else
        HOMEBREW_NO_AUTO_UPDATE=1 brew install "$1"
    fi
}

echo -e "\n ðŸ’¬  Running brew update..."
brew update

echo -e "\n ðŸ’¬  Installing pyenv & pyenv-virtualenv..."
install pyenv
install pyenv-virtualenv

# To get pystan to install correctly (required by prophet)
# https://stackoverflow.com/questions/52814868/pystan-compileerror-command-gcc-failed-with-exit-status-1-macos
echo -e "\n ðŸ’¬  Installing gcc..."
install gcc
export CC=gcc-11
export CXX=g++-11

# To use xgboost models on mac
# https://xgboost.readthedocs.io/en/latest/build.html#building-on-osx
echo -e "\n ðŸ’¬  Installing libomp..."
install libomp

# To use pyspark models on mac
# To use hdfs storage on mac
echo -e "\n ðŸ’¬  Installing java and hadoop..."
install java
install hadoop

echo "\n âœ…  Done."
