#!/bin/bash
set -e

echo -e "\n ðŸ’¬  Installing..."

source $(dirname $0)/_pyenv_config "$@"

if [[ $(pyenv versions | grep -L $PYTHON_VERSION) ]]; then
    echo -e "\n ðŸ’¬  Installing Python $PYTHON_VERSION"
    pyenv install $PYTHON_VERSION
fi

echo -e "\n ðŸ’¬  Creating a $PYTHON_VERSION environment: $VIRTUALENV_NAME"
env PYTHON_CONFIGURE_OPTS="--enable-framework CC=clang" \
    pyenv virtualenv \
        --force $PYTHON_VERSION \
        "$VIRTUALENV_NAME"

echo -e "\n ðŸ’¬  Setting local: $VIRTUALENV_NAME"
pyenv local $VIRTUALENV_NAME

pip install --upgrade pip setuptools wheel
for i in ./requirements*txt; do
    echo -e "\n\n ðŸ’¬  Installing requirements in: $i"
    pip install -r $i
done

pip install -e $REPO_ROOT
echo -e "\n âœ…  Done."
